# Custom RP2040 Board Configuration Template
#
# Copy this file to custom-rp2040.toml and modify for your board.
# All pin assignments use the format "gpio<N>" where N is the GPIO number.
# Prefix with "!" for active-low signals.

[board]
name = "My Custom Board"
mcu = "rp2040"
flash_size = 2097152  # 2MB (adjust if different)

# Stepper motor pins
# At minimum, you need one stepper for basket rotation.
# step: Pulse pin (one pulse = one step)
# dir: Direction pin (high/low = CW/CCW)
# enable: Enable pin (active low with "!" prefix)
[stepper.x]
step = "gpio2"
dir = "gpio3"
enable = "!gpio4"

# Additional steppers (uncomment if needed)
# [stepper.y]
# step = "gpio5"
# dir = "gpio6"
# enable = "!gpio7"

# Heater outputs
# PWM-capable pins recommended for temperature control
[heaters]
heater0 = "gpio15"
# heater1 = "gpio14"  # Additional heater if needed

# Temperature sensors (must be ADC-capable pins)
# RP2040 ADC pins: gpio26, gpio27, gpio28
[thermistors]
th0 = "gpio26"
# th1 = "gpio27"

# Fan outputs (PWM-capable pins recommended)
[fans]
fan0 = "gpio14"
# fan1 = "gpio13"

# Communication
[uart]
# For external display module (V0 Mini, etc.)
display_tx = "gpio0"
display_rx = "gpio1"
display_baud = 250000

# I2C for direct display connection or sensors
[i2c]
sda = "gpio16"
scl = "gpio17"
frequency = 400000

# Endstops / limit switches
[endstops]
# Uncomment and configure as needed
# lid_switch = "gpio10"
# level_sensor = "gpio11"

# Status LEDs
[leds]
# Neopixel / WS2812
# neopixel = "gpio24"
# neopixel_count = 1

# USB serial (usually enabled)
[usb]
enabled = true
