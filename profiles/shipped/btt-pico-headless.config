# Description: BTT SKR Pico headless (no display)
#
# BTT SKR Pico controller running headless.
# Control via USB serial connection.

# Board
CONFIG_BOARD_BTT_PICO=y
# CONFIG_BOARD_PICO is not set
# CONFIG_BOARD_FEATHER_RP2040 is not set
# CONFIG_BOARD_CUSTOM_RP2040 is not set

# Motors - Stepper with TMC2209
CONFIG_MOTOR_STEPPER=y
# CONFIG_MOTOR_DC is not set
# CONFIG_MOTOR_AC is not set
CONFIG_MOTOR_COUNT=3
CONFIG_TMC_UART_ENABLED=y
CONFIG_TMC_DEFAULT_CURRENT_MA=800
CONFIG_TMC_DEFAULT_MICROSTEPS=16
CONFIG_TMC_STEALTHCHOP=y

# Display - None
# CONFIG_DISPLAY_V0_MINI is not set
# CONFIG_DISPLAY_DIRECT_OLED is not set
CONFIG_DISPLAY_NONE=y
# CONFIG_BUILD_DISPLAY_FW is not set

# Machine (edit isochron-firmware/machine.toml for configuration)
CONFIG_MACHINE_NAME="Isochron Cleaner"

# Features
CONFIG_FEATURE_USB_SERIAL=y
CONFIG_FEATURE_WATCHDOG=y
CONFIG_FEATURE_FLASH_CONFIG=y

# Build
CONFIG_DEFMT_LOG=y
CONFIG_LOG_LEVEL_INFO=y
# CONFIG_RELEASE_BUILD is not set
